<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AdditionalSettingActivity">

    <include layout="@layout/toolbar_bar_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:background="@color/white"
        android:padding="@dimen/padd_10"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_delivery_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_deli_mini_order"
                style="@style/testMediumTitleStyle"
                android:layout_width="match_parent"
                android:text="@string/set_minimum_order"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="15sp"
                android:layout_margin="@dimen/padd_10"
                app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
            <View
                style="@style/viewLineStyle"
                android:layout_marginStart="@dimen/padd_10"
                android:layout_marginEnd="@dimen/padd_10"
                />
            <TextView
                android:id="@+id/tv_dist"
                style="@style/testMediumTitleStyle"
                android:layout_width="match_parent"
                android:text="@string/set_distance"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="15sp"
                android:layout_margin="@dimen/padd_10"
                app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
            <View
                style="@style/viewLineStyle"
                android:layout_marginStart="@dimen/padd_10"
                android:layout_marginEnd="@dimen/padd_10"
                />
            <TextView
                android:id="@+id/tv_deli_slot"
                style="@style/testMediumTitleStyle"
                android:layout_width="match_parent"
                android:text="@string/slot_selection"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="15sp"
                android:layout_margin="@dimen/padd_10"
                app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
            <View
                style="@style/viewLineStyle"
                android:layout_marginStart="@dimen/padd_10"
                android:layout_marginEnd="@dimen/padd_10"
                />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_pickup_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pic_mini_order"
                style="@style/testMediumTitleStyle"
                android:layout_width="match_parent"
                android:text="@string/set_minimum_order"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="15sp"
                android:layout_margin="@dimen/padd_10"
                app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
            <View
                style="@style/viewLineStyle"
                android:layout_marginStart="@dimen/padd_10"
                android:layout_marginEnd="@dimen/padd_10"
                />
            <TextView
                android:id="@+id/tv_pic_slot"
                style="@style/testMediumTitleStyle"
                android:layout_width="match_parent"
                android:text="@string/slot_selection"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textSize="15sp"
                android:layout_margin="@dimen/padd_10"
                app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
            <View
                style="@style/viewLineStyle"
                android:layout_marginStart="@dimen/padd_10"
                android:layout_marginEnd="@dimen/padd_10"
                />
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>