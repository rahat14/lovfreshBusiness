<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padd_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            style="@style/testStyle"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Same Day"
            android:gravity="center_vertical|left"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sc_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:checked="true"
            app:buttonTint="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_slot"
        style="@style/testsecondStyle"
        android:text="@string/time_slot"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="@dimen/padd_15"
        app:drawableEndCompat="@drawable/ic_grey_right_arrow" />
    <View
        android:id="@+id/view"
        style="@style/viewLineStyle"
        android:layout_marginStart="@dimen/padd_10"
        android:layout_marginEnd="@dimen/padd_10"
        android:layout_marginTop="@dimen/padd_10"
        />

</LinearLayout>