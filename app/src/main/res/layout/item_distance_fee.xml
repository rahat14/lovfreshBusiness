<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_dist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padd_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_doller"
            style="@style/testMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Distance \nless than:"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_dist"
            style="@style/editTextstyle"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padd_5"
            android:layout_toEndOf="@+id/tv_doller"
            android:gravity="center"
            android:text="5.00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_unit"
            style="@style/testMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_dist"
            android:text="KM"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_fee"
            style="@style/testMediumStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/padd_10"
            android:layout_toEndOf="@+id/tv_unit"
            android:gravity="center"
            android:text="Fee: $"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_fee"
            style="@style/editTextstyle"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/padd_5"
            android:layout_toEndOf="@+id/tv_fee"
            android:gravity="center"
            android:text="5.00"
            android:textSize="15sp" />

    </RelativeLayout>
</LinearLayout>
