<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/iv_header_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/bg_header_first" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:contentDescription="@null"
                android:src="@drawable/heart_logo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/slider_heading"
            style="@style/testHeadingStyle"
            android:layout_margin="10dp"
            android:paddingHorizontal="5dp"
            android:text="@string/first_slide_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/slider_desc"
            style="@style/testHeadingNormalStyle"
            android:layout_margin="10dp"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>