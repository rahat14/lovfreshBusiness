<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    tools:context=".activities.ReferAFriendActivity">
    <include layout="@layout/toolbar_bar_menu" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_descripation"
            style="@style/testMediumFourthStyle"
            android:gravity="center"
            android:text="@string/dumy_text"
            />

        <TextView
            android:id="@+id/tv_refer_code"
            style="@style/testHeadingStyle"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="" />

        <Button
            android:id="@+id/btn_send"
            style="@style/buttonStyle"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="@string/send_your_frd"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>