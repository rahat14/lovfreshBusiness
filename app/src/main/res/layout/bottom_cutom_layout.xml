<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:baselineAligned="false"
    android:gravity="center"
    app:elevation="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            app:tint="@color/selector_color_image"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/tv_home"
            style="@style/testMediumThirdStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@drawable/selector_drawable_text"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_offer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_offer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:tint="@color/selector_color_image"
            android:src="@drawable/ic_tags" />

        <TextView
            android:id="@+id/tv_specials"
            style="@style/testMediumSecondStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_drawable_text"
            android:text="@string/nav_tag"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_carts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">


        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_carts"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cart"
                app:tint="@color/selector_color_image" />

            <TextView
                android:id="@+id/tv_cart_count"
                style="@style/testStyle"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_item_count"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_shop_online"
            style="@style/testMediumSecondStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/shop_online"
            android:textColor="@drawable/selector_drawable_text"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">


        <RelativeLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_product_list"
                app:tint="@color/selector_color_image" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            app:tint="@color/selector_color_image"
            android:src="@drawable/ic_profile"
           />

        <TextView
            android:id="@+id/tv_myaccount"
            style="@style/testMediumSecondStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@drawable/selector_drawable_text"
            android:text="@string/account"
            android:textSize="10sp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>